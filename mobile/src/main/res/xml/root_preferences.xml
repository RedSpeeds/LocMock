<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="GPS Settings">

        <EditTextPreference
            app:defaultValue="1"
            app:key="accuracy"
            app:persistent="true"
            app:summary="Set GPS fix accuracy value in meters"
            app:title="Accuracy"
            app:useSimpleSummaryProvider="false" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="mocknetwork"
            android:title="Mock network location"
            app:persistent="true"
            app:summary="Mock network service location" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="enableAltitude"
            android:title="Enable altitude"
            app:persistent="true"
            app:summary="If on uses altitude API to get location's altitude" />
        <EditTextPreference
            android:defaultValue="1"
            android:key="speed"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Location speed"
            android:summary="Location speed in meters per second"/>

    </PreferenceCategory>

</PreferenceScreen>